#!/bin/bash
set -euo pipefail

FILE_PATTERN="$BUILDKITE_PLUGIN_TEST_ANALYTICS_FILE_UPLOADER_FILE_PATTERN"
ARTIFACT_LOCATION="$BUILDKITE_PLUGIN_TEST_ANALYTICS_FILE_UPLOADER_ARTIFACT_LOCATION"
DRY_RUN="$BUILDKITE_PLUGIN_TEST_ANALYTICS_FILE_UPLOADER_DRY_RUN"
BUILDKITE_ANALYTICS_TOKEN="$BUILDKITE_PLUGIN_TEST_ANALYTICS_FILE_UPLOADER_BUILDKITE_ANALYTICS_TOKEN"
BUILDKITE_BUILD_ID="$BUILDKITE_PLUGIN_TEST_ANALYTICS_FILE_UPLOADER_BUILDKITE_BUILD_ID"
BUILDKITE_BUILD_NUMBER="$BUILDKITE_PLUGIN_TEST_ANALYTICS_FILE_UPLOADER_BUILDKITE_BUILD_NUMBER"
BUILDKITE_STEP_ID="$BUILDKITE_PLUGIN_TEST_ANALYTICS_FILE_UPLOADER_BUILDKITE_STEP_ID"
BUILDKITE_JOB_ID="$BUILDKITE_PLUGIN_TEST_ANALYTICS_FILE_UPLOADER_BUILDKITE_JOB_ID"
BUILDKITE_BRANCH="$BUILDKITE_PLUGIN_TEST_ANALYTICS_FILE_UPLOADER_BUILDKITE_BRANCH"
BUILDKITE_COMMIT="$BUILDKITE_PLUGIN_TEST_ANALYTICS_FILE_UPLOADER_BUILDKITE_COMMIT"
BUILDKITE_MESSAGE="$BUILDKITE_PLUGIN_TEST_ANALYTICS_FILE_UPLOADER_BUILDKITE_MESSAGE"
BUILDKITE_BUILD_URL="$BUILDKITE_PLUGIN_TEST_ANALYTICS_FILE_UPLOADER_BUILDKITE_BUILD_URL"

ARTIFACTS_FILE_QUERY="${ARTIFACT_LOCATION}/${FILE_PATTERN}"

echo "--- Downloading artifacts"
mkdir -p $ARTIFACT_LOCATION
buildkite-agent artifact download $ARTIFACTS_FILE_QUERY "${ARTIFACT_LOCATION}/" --build $BUILDKITE_BUILD_ID --step $BUILDKITE_STEP_ID

echo "--- Uploading artifacts to Buildkite Test Analytics"

if [ "$DRY_RUN" = true ]; then
  echo "Dry run enabled"
  if [[ -z ${BUILDKITE_ANALYTICS_TOKEN} ]]; then
    echo "BUILDKITE_ANALYTICS_TOKEN unbound variable"
  fi
  echo "BUILDKITE_BUILD_ID: ${BUILDKITE_BUILD_ID}"
  echo "BUILDKITE_BUILD_NUMBER: ${BUILDKITE_BUILD_NUMBER}"
  echo "BUILDKITE_JOB_ID: ${BUILDKITE_JOB_ID}"
  echo "BUILDKITE_BRANCH: ${BUILDKITE_BRANCH}"
  echo "BUILDKITE_COMMIT: ${BUILDKITE_COMMIT}"
  echo "BUILDKITE_MESSAGE: ${BUILDKITE_MESSAGE}"
  echo "BUILDKITE_BUILD_URL: ${BUILDKITE_BUILD_URL}"
fi

for FILE in $ARTIFACTS_FILE_QUERY; do
  if [ "$DRY_RUN" = true ]; then
    echo "Upload ${FILE}..."
  else
    echo "Upload ${FILE}..."
    curl -X POST \
      -H "Authorization: Token token=$BUILDKITE_ANALYTICS_TOKEN" \
      -F "format=junit" \
      -F "data=@$FILE" \
      -F "run_env[CI]=buildkite" \
      -F "run_env[key]=$BUILDKITE_BUILD_ID" \
      -F "run_env[number]=$BUILDKITE_BUILD_NUMBER" \
      -F "run_env[job_id]=$BUILDKITE_JOB_ID" \
      -F "run_env[branch]=$BUILDKITE_BRANCH" \
      -F "run_env[commit_sha]=$BUILDKITE_COMMIT" \
      -F "run_env[message]=$BUILDKITE_MESSAGE" \
      -F "run_env[url]=$BUILDKITE_BUILD_URL" \
      https://analytics-api.buildkite.com/v1/uploads
  fi
done
